<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="false">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:clickable="false"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="?attr/app_card_background"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="false">

            <ImageView
                android:id="@+id/iv_art"
                android:layout_width="100dp"
                android:layout_height="64dp"
                android:clickable="false"
                android:padding="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/vec_folder" />

            <TextView
                android:id="@+id/tvFolderName"
                fontPath="fonts/Product Sans Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_art"
                android:layout_alignStart="@+id/iv_art"
                android:layout_alignEnd="@+id/iv_art"
                android:clickable="false"
                android:gravity="center"
                android:maxLines="1"
                android:padding="2dp"
                android:text="Immortalized"
                android:textAlignment="gravity"
                android:textColor="?attr/app_textColorPrimary"
                android:textSize="14sp"
                tools:ignore="HardcodedText,MissingPrefix" />

            <TextView
                android:id="@+id/tvInfo"
                fontPath="fonts/Product Sans Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFolderName"
                android:layout_alignStart="@+id/iv_art"
                android:layout_alignEnd="@+id/iv_art"
                android:layout_marginBottom="6dp"
                android:clickable="false"
                android:gravity="center"
                android:maxLines="1"
                android:padding="2dp"
                android:text="Disturbed"
                android:textAlignment="gravity"
                android:textColor="?attr/app_textColorSecondary"
                android:textSize="10sp"
                tools:ignore="HardcodedText,MissingPrefix,SmallSp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>