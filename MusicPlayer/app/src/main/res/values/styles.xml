<resources>

    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary_Dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Dark</item>
        <item name="colorAccent">@color/colorAccent_Dark</item>

        <item name="android:navigationBarColor">@color/colorPrimaryDark_Dark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark_Dark</item>

        <item name="android:windowBackground">@color/window_background_dark</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        //mudar as cores dos elementos ao mudar de tema
        <item name="app_textColorPrimary">@color/text_primary_dark</item>
        <item name="app_textColorSecondary">@color/text_secondary_dark</item>
        <item name="app_playing_now_view_color">@color/playing_now_view_dark</item>
        <item name="app_card_background">@color/card_background_dark</item>

    </style>


    <style name="AppThemeTest" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/warningColor</item>
        <item name="colorPrimaryDark">@color/b_bar_1</item>
        <item name="colorAccent">@color/infoColor</item>

        <item name="android:navigationBarColor">@color/colorPrimaryDark_Dark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark_Dark</item>

        <item name="android:windowBackground">@color/colorAccent_Dark</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        //mudar as cores dos elementos ao mudar de tema
        <item name="app_textColorPrimary">@color/text_primary_dark</item>
        <item name="app_textColorSecondary">@color/text_secondary_dark</item>
        <item name="app_playing_now_view_color">@color/playing_now_view_dark</item>
        <item name="app_card_background">@color/card_background_dark</item>

    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLight</item>
        <item name="colorAccent">@color/colorAccentLight</item>

        <item name="android:navigationBarColor">@color/status_navigation_bar_color_light</item>
        <item name="android:statusBarColor">@color/status_navigation_bar_color_light</item>

        <item name="android:windowBackground">@color/window_background_light</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        //mudar as cores dos elementos ao mudar de tema
        <item name="app_textColorPrimary">@color/text_primary_light</item>
        <item name="app_textColorSecondary">@color/text_secondary_light</item>
        <item name="app_playing_now_view_color">@color/playing_now_view_light</item>
        <item name="app_card_background">@color/card_background_light</item>

    </style>


    <style name="AppThemeLight.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>

    </style>

    <style name="AppThemeDark.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>

    </style>




    <style name="AppThemeLight.Translucent.Full">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>


    </style>

    <style name="AppThemeDark.Translucent.Full">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


</resources>
